{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "ESNext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "dist",
        "incremental": true
    },
    "exclude": ["node_modules", "src/components", "pages", "components"],
    "ts-node": {
        "transpileOnly": true
    },
    "include": ["**/*.ts", "**/*.tsx", "setupTests.ts", "types.d.ts", "types/**/*.d.ts", "lib", "services"]
}
